@model TienThoBookStore.WebApp.Models.ConfirmEmailViewModel
@{
    ViewData["Title"] = "Xác thực Email";
}

<div class="container py-5">
    <h3>@Model.Message</h3>

    @if (Model.CanResend)
    {
        <p class="mt-3">
            Link xác thực đã hết hạn. Bạn có thể nhập lại email để gửi link mới:
        </p>
        <form asp-action="ResendConfirmation" method="post" class="w-50">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email…" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                Gửi lại email xác thực
            </button>
        </form>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
