@model List<TienThoBookStore.Application.DTOs.BookDTO.BookDTO>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var book in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Ảnh bìa -->
                        <img class="card-img-top" src="@book.CoverImage" alt="@book.Title" />
                        <!-- Chi tiết sách -->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">@book.Title</h5>
                                <p class="text-muted mb-2">@book.Author</p>
                                <strong>@String.Format("{0:N0} đ", book.Price)</strong>
                            </div>
                        </div>
                        <!-- Actions -->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" href="#">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
