@model TienThoBookStore.WebApp.Models.CategoryVm
@{
    ViewData["Title"] = "Chỉnh sửa Danh mục";
}
<h1 class="h3 mb-4 text-gray-800">Chỉnh sửa Danh mục</h1>
<form asp-action="EditCategory" method="post">
  <input type="hidden" asp-for="CategoryId" />
  <div class="form-group">
    <label asp-for="Name">Tên danh mục</label>
    <input asp-for="Name" class="form-control" />
  </div>
  <button type="submit" class="btn btn-primary">Cập nhật</button>
  <a asp-action="Categories" class="btn btn-secondary">Hủy</a>
</form>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
